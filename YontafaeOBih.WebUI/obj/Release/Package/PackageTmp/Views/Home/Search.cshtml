@model IEnumerable<YontafaeOBih.WebUI.Models.Content>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="panel panel-default" style="padding:15px;">
    <h1 class="panel-heading">نتائج البحث</h1>
    <div class="row">

        @foreach (var subItem in Model)
        {

            <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; height:380px;">
                <img src="~/Uploads/@subItem.ContentImage" />
                <h3>@Html.DisplayFor(modelItem => subItem.ContentTitle)</h3>
                <h5>@Html.DisplayFor(modelItem => subItem.ContentDescription)</h5>
                @Html.ActionLink("التفاصيل", "Details", new { ContentId = subItem.Id }, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>
