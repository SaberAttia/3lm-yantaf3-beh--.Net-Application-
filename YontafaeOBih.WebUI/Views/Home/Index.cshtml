@model IEnumerable<YontafaeOBih.WebUI.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron alert alert-info">
    <h3>مرحباً بك عزيزي الزائر</h3>
    <p>مرحباً بك في موقع المحتوى المميز بإختلاف نوعه, يمكنك نشر محتواك المميز ايضاً على موقعنا, فقط قم بالتسجيل في الموقع وتمتع بكل خصائص الناشر والمزيد.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
</div>

@foreach (var item in Model)
{
    <div class="panel panel-info">
        <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.CategoryName)</h1></div>
        <div class="row panel-body">
            <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
            @foreach (var subItem in item.Contents)
            {

                <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; min-height:380px;">
                    <img src="~/Uploads/@subItem.ContentImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.ContentTitle)</h3>
                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.ContentDescription).ToString()))</h5>
                    @Html.ActionLink("التفاصيل", "Details", new { ContentId = subItem.Id }, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    </div>
}

